<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.InstagramCardDesign" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="textView">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="textView.InLinearLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/textSize</item>
    </style>
    <style name="textView.InLinearLayout.Count">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="textView.Bio">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="profileInformation">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>
</resources>